<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DictionaryApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DictionaryApp"
    Shell.FlyoutBehavior="Flyout"
    Title="DictionaryApp">

        <ShellContent
        Title="Search"
        ContentTemplate="{DataTemplate local:Pages.MainPage}"
        Route="MainPage"
        Icon="Resources/Images/search_icon.png" />

        <ShellContent
        Title="Admin"
        ContentTemplate="{DataTemplate local:Pages.AdminPage}"
        Route="AdminPage"
        Icon="Resources/Images/admin_icon.png" />

</Shell>
